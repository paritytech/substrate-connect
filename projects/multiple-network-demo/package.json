{
  "name": "@substrate/multiple-network-demo",
  "version": "1.0.0",
  "main": "./dist/index.html",
  "author": "Parity Team <admin@parity.io>",
  "contributors": [
    "Raoul Millais <raoul@parity.io>"
  ],
  "license": "GPL-3.0-only",
  "browserslist": [
    "last 2 versions"
  ],
  "scripts": {
    "deep-clean": "yarn clean && rm -rf node_modules",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "build": "yarn clean && yarn typecheck && parcel build index.html --public-url ./ --detailed-report",
    "dev": "yarn clean && concurrently \"yarn typecheck:watch\" \"parcel --no-cache index.html\"",
    "test": "echo \"Warning: Jest has been setup but no tests exist.\"",
    "test:watch": "jest --watch",
    "lint": "yarn eslint . --ext .js,.jsx,.ts,.tsx"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "concurrently": "^6.0.1",
    "eslint": "^7.20.0",
    "jest": "^26.6.3",
    "parcel": "nightly",
    "ts-jest": "^26.5.1",
    "typescript": "^4.1.5"
  },
  "dependencies": {
    "@substrate/connect": "^0.3.7",
    "regenerator-runtime": "^0.13.7"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "parserOptions": {
      "project": [
        "./tsconfig.json"
      ],
      "createDefaultProgram": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking"
    ],
    "env": {
      "node": true
    }
  }
}

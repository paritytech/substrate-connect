{
    "compilerOptions": {
      "jsx": "react",
      "baseUrl": "./src",
      "outDir": "./dist/",
      "lib": ["es6", "dom"],
      "noImplicitAny": true,
      "noImplicitThis": true,
      "strictNullChecks": true,
      "target": "ES2015",
      "sourceMap": true,
      "declaration": true,
      "declarationMap": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "strict": true,
      "module": "es6",
      "allowSyntheticDefaultImports" : true,
      "esModuleInterop": true
    },
    "include": ["src", "."],
    "exclude": ["./webpack.*", "*config*"]
}

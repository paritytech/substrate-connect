{
  "name": "@substrate/extension",
  "version": "0.3.0",
  "description": "Browser extension to manage substrate-based blockchain light clients",
  "main": "dist/src/index.js",
  "author": "Parity Technologies",
  "license": "GPL-3.0-only",
  "type": "module",
  "scripts": {
    "prep": "mkdir -p dist && cp -r ./assets/icons ./dist && cp -r ./assets/chainspecs ./dist",
    "prep:chrome": "yarn prep && node scripts/generateManifest.js ./assets/manifest-v3-chrome.json ./dist/manifest.json",
    "prep:firefox": "yarn prep && node scripts/generateManifest.js ./assets/manifest-v3-firefox.json ./dist/manifest.json",
    "build": "yarn build:chrome && yarn build:firefox",
    "build:chrome": "yarn clean && yarn prep:chrome && concurrently \"yarn:build-*\" && node scripts/checkExtensionScriptSizes.js",
    "build:firefox": "yarn clean && yarn prep:firefox && concurrently \"yarn:build-*\" && node scripts/checkExtensionScriptSizes.js",
    "build-content": "INPUT=content npx vite build --config vite.script.config.js",
    "build-background": "INPUT=background npx vite build --config vite.script.config.js",
    "build-ui": "vite build --config vite.ui.config.js",
    "dev": "yarn dev:chrome",
    "dev:chrome": "yarn clean && yarn prep:chrome && concurrently \"yarn:dev-*\"",
    "dev:firefox": "yarn clean && yarn prep:firefox && concurrently \"yarn:dev-*\"",
    "dev-content": "yarn build-content --mode development --watch",
    "dev-background": "yarn build-background --mode development --watch",
    "dev-ui": "yarn build-ui --mode development --watch",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "test": "exit 0; #No tests",
    "start": "web-ext run --source-dir ./dist -t chromium",
    "start:firefox": "web-ext run --source-dir ./dist -t firefox-desktop",
    "clean": "rm -rf dist",
    "deep-clean": "yarn clean && rm -rf node_modules",
    "playwright": "playwright test --ui"
  },
  "keywords": [],
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@vitejs/plugin-react-swc": "^3.4.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "eslint": "^8.53.0",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "web-ext": "^7.8.0"
  },
  "dependencies": {
    "@polkadot-api/client": "next",
    "@polkadot-api/light-client-extension-helpers": "next",
    "@polkadot-api/substrate-client": "next",
    "@polkadot-api/utils": "next",
    "@react-rxjs/core": "^0.10.7",
    "@react-rxjs/utils": "^0.9.7",
    "@substrate/connect-extension-protocol": "*",
    "@unstoppablejs/utils": "^1.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.11.0",
    "rxjs": "^7.8.1",
    "scale-ts": "^1.4.2",
    "smoldot": "2.0.13"
  }
}

{
  "name": "@substrate/extension",
  "version": "0.1.5",
  "description": "Browser extension to manage substrate-based blockchain light clients",
  "main": "dist/src/index.js",
  "author": "Parity Technologies",
  "license": "GPL-3.0-only",
  "type": "module",
  "scripts": {
    "bundle-source-code": "cp tsconfig.json tsconfig_bkp.json && sed -i '26d' tsconfig.json && sed -i '2d' tsconfig.json && zip -r substrate-connect_source-code.zip . -x \"./node_modules/*\" -x \"./dist/*\" && mv tsconfig_bkp.json tsconfig.json",
    "deep-clean": "yarn clean && rm -rf node_modules",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "compile": "tsc -b",
    "test": "node --no-warnings --experimental-vm-modules ../../node_modules/jest/bin/jest.js --colors --coverage",
    "prebuild": "yarn clean",
    "build": "webpack --config webpack.prod.js && cd dist && zip -r packed-extension.zip .",
    "dev": "yarn run prebuild && webpack --node-env development --config webpack.dev.js",
    "start": "web-ext run --source-dir ./dist -t chromium",
    "start:firefox": "web-ext run --source-dir ./dist -t firefox-desktop",
    "lint": "yarn eslint . --ext .js,.jsx,.ts,.tsx"
  },
  "keywords": [],
  "devDependencies": {
    "@hot-loader/react-dom": "^17.0.2",
    "autoprefixer": "^10.4.4",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.1",
    "eslint": "^8.14.0",
    "html-minimizer-webpack-plugin": "^4.0.0",
    "jest-chrome": "^0.7.2",
    "mini-css-extract-plugin": "^2.6.0",
    "postcss": "^8.4.12",
    "postcss-loader": "^6.2.1",
    "style-loader": "^3.3.1",
    "tailwindcss": "^3.0.24",
    "ts-loader": "^9.3.0",
    "web-ext": "^6.8.0",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "@substrate/connect-extension-protocol": "^1.0.0",
    "@substrate/smoldot-light": "0.6.19",
    "react": "^18.1.0",
    "react-dom": "^18.2.0",
    "react-hot-loader": "^4.13.0",
    "react-icons": "^4.3.1",
    "typescript": "^4.7.3"
  }
}

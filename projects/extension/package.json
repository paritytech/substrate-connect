{
  "name": "@substrate/extension",
  "version": "0.2.13",
  "description": "Browser extension to manage substrate-based blockchain light clients",
  "main": "dist/src/index.js",
  "author": "Parity Technologies",
  "license": "GPL-3.0-only",
  "type": "module",
  "scripts": {
    "prep": "mkdir -p dist && cp -r ./assets/icons ./dist && cp -r ./assets/chainspecs ./dist",
    "prep:m3": "yarn prep && node scripts/generateManifest.js ./assets/manifest-v3.json ./dist/manifest.json",
    "prep:m2": "yarn prep && node scripts/generateManifest.js ./assets/manifest-v2.json ./dist/manifest.json",
    "build": "yarn build:m3 && yarn build:m2",
    "build:m3": "yarn clean && yarn prep:m3 && concurrently \"yarn:build-*\"",
    "build:m2": "yarn clean && yarn prep:m2 && concurrently \"yarn:build-*\"",
    "build-content": "INPUT=content npx vite build --config vite.script.config.js",
    "build-background": "INPUT=background npx vite build --config vite.script.config.js",
    "build-ui": "vite build --config vite.ui.config.js",
    "dev": "yarn dev:m3",
    "dev:m3": "yarn clean && yarn prep:m3 && concurrently \"yarn:dev-*\"",
    "dev:m2": "yarn clean && yarn prep:m2 && concurrently \"yarn:dev-*\"",
    "dev-content": "yarn build-content --mode development --watch",
    "dev-background": "yarn build-background --mode development --watch",
    "dev-ui": "yarn build-ui --mode development --watch",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "test": "vitest",
    "start": "web-ext run --source-dir ./dist -t chromium",
    "start:firefox": "web-ext run --source-dir ./dist -t firefox-desktop",
    "clean": "rm -rf dist",
    "deep-clean": "yarn clean && rm -rf node_modules"
  },
  "keywords": [],
  "devDependencies": {
    "@vitejs/plugin-react-swc": "^3.3.2",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.2.1",
    "eslint": "^8.49.0",
    "postcss": "^8.4.25",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vitest": "^0.34.3",
    "web-ext": "^7.6.2"
  },
  "dependencies": {
    "@substrate/connect": "*",
    "@substrate/connect-extension-protocol": "*",
    "@unstoppablejs/utils": "^1.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.10.1",
    "scale-ts": "^1.4.1",
    "smoldot": "2.0.6"
  }
}

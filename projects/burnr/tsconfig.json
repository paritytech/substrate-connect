{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "lib": ["es6", "dom"],
    "module": "es6",
    "target": "ES2015",
    "types": [],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "jsx": "react"
  },
  "include": ["src/**/*"],
  "exclude": ["*node_modules*", "../../node_modules*"],
  "references": [{ "path": "../../packages/connect" }]
}

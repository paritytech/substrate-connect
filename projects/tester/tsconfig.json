{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["es6", "dom"],
    "target": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "module": "ES2015"
  },
  "include": ["src", "src/**/*.json"]
}

  },
  "license": "MIT",
  "exports": {
    ".": "./dist/index.mjs",
    "./smoldot": "./dist/smoldot/index.mjs",
    "./json-rpc-provider": "./dist/json-rpc-provider/index.mjs",
    "./rpc-client": "./dist/rpc-client/index.mjs"
  },
  "files": [

{
  "name": "@substrate/smoldot-provider",
  "version": "0.0.1",
  "description": "PolkadotJS provider for smoldot wasm light client",
  "repository": "https://github.com/paritytech/substrate-connect.git",
  "author": "Parity Team <admin@parity.io>",
  "license": "GPL-3.0-only",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prebuild": "yarn clean",
    "build": "tsc --build src",
    "clean": "rm -rf dist/",
    "pretest": "yarn build",
    "test": "ava --config ava.config.js --verbose",
    "lint": "echo \"No lint yet for @smoldot/provider: actual command -> yarn eslint . --ext .js,.ts\"",
    "examples": "ava --config ava.examples.config.js"
  },
  "release": [
    "dist/**"
  ],
  "sideEffects": "false",
  "dependencies": {
    "@polkadot/rpc-provider": "^3.7.3",
    "browserify-fs": "^1.0.0",
    "eventemitter3": "^4.0.7",
    "mkdirp": "^1.0.4",
    "smoldot": "latest"
  },
  "devDependencies": {
    "@polkadot/api": "^3.7.3",
    "@types/mkdirp": "^1.0.1",
    "@types/sinon": "^9.0.10",
    "ava": "^3.15.0",
    "sinon": "^9.2.3",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3",
    "@substrate/smoldot-test-utils": "file:../smoldot-test-utils"
  },
  "peerDependencies": {
    "@polkadot/wasm-crypto": "^3.2.2"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "parserOptions": {
      "project": "./src/tsconfig.json",
      "createDefaultProgram": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking"
    ],
    "env": {
      "node": true
    }
  }
}

  },
  "devDependencies": {
    "@polkadot/api": "^3.6.4",
    "@types/mkdirp": "^1.0.1",
    "@types/sinon": "^9.0.10",
    "ava": "^3.15.0",
    "sinon": "^9.2.3",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "@polkadot/wasm-crypto": "^3.2.2"

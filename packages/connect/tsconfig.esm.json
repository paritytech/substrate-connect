{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "rootDir": "./src",
    "esModuleInterop": true,
    "outDir": "./dist/esm",
    "target": "ES2018",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "module": "ES2020",
    "declarationDir": "dist/types"
  },
  "exclude": [
    "**/*.test.ts",
    "jest.config*",
    "tsconfig*",
    "*node_modules*",
    "../../node_modules*",
    "src/connector/specs/*.json"
  ],
  "include": ["src/**/*", "src/**/*.json"],
  "references": [{ "path": "../connect-extension-protocol" }]
}

{
  "name": "@substrate/smoldot-connect",
  "version": "0.1.0",
  "description": "A unified API for using the basic functionalities of `@subtrate/smoldot-light`. It tries to use the Extension and it fallsback to the WASM module if the Extension is not present",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "checkSpecs": "node ../../bin/checkSpecs.js",
    "prebuild": "yarn clean && yarn checkSpecs",
    "pretest": "yarn build",
    "test": "node --no-warnings --experimental-vm-modules $(yarn bin)/jest --colors --coverage",
    "deep-clean": "yarn clean && rm -rf node_modules",
    "clean": "rm -rf dist/ tsconfig.tsbuildinfo",
    "build": "tsc -b && node ./src/specs/generate-specs.js",
    "lint": "yarn eslint . --ext .js,.ts"
  },
  "dependencies": {
    "@substrate/connect-extension-protocol": "1.0.0",
    "@substrate/smoldot-light": "0.5.18"
  },
  "devDependencies": {
    "jest": "^27.4.3"
  },
  "author": "Josep M Sobrepere <josep@parity.io>",
  "license": "GPL-3.0-only"
}

{
  "name": "substrate-connect",
  "version": "0.0.1",
  "description": "A collection of libraries and tools needed to run Substrate Wasm light clients directly in the browser",
  "repository": "https://github.com/paritytech/substrate-connect.git",
  "author": "Parity Team <admin@parity.io>",
  "maintainers": [
    "Stefanie Doll <stefie@parity.io>",
    "Sveta Goldstein <sveta@parity.io>",
    "Raoul Millais <raoul@parity.io>",
    "Nikolaos Kontakis <nikolaos@parity.io"
  ],
  "license": "GPL-3.0-only",
  "private": true,
  "workspaces": [
    "packages/smoldot-test-utils",
    "packages/connect-extension-protocol",
    "packages/connect",
    "projects/extension",
    "projects/smoldot-browser-demo",
    "projects/multiple-network-demo",
    "projects/burnr",
    "projects/landing-page"
  ],
  "scripts": {
    "deep-clean": "npm run deep-clean --workspaces && rm -rf .parcel-cache && rm -rf node_modules",
    "clean": " npm run clean --workspaces",
    "prelint": "npm run build --workspace=packages/connect-extension-protocol",
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces",
    "build": "npm run build --workspaces",
    "dev:burnr": "npm run dev --workspace=burnr",
    "dev:landing-page": "npm run dev --workspace=projects/landing-page",
    "dev:smoldot-browser-demo": "npm run dev --workspace=projects/smoldot-browser-demo",
    "dev:extension": "npm run dev --workspace projects/extension",
    "deploy:gh-pages:smoldot-browser-demo": "npm run deploy:gh-pages --workspace=projects/smoldot-browser-demo",
    "deploy:ipfs:smoldot-browser-demo": "npm run deploy:ipfs --workspace=projects/smoldot-browser-demo",
    "deploy": "./deploy.sh",
    "postinstall": "husky install",
    "connect-tester": "npm run build --workspace=packages/extension-provider --workspace=packages/connect && npm run dev:smoldot-browser-demo"
  },
  "devDependencies": {
    "@parcel/transformer-image": "nightly",
    "copyfiles": "^2.3.0",
    "husky": "^5.0.8",
    "parcel": "nightly"
  },
  "dependencies": {
    "@wasm-tool/wasm-pack-plugin": "^1.3.1"
  }
}
